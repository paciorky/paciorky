<% title Product.model_name.human %>

<div class="well">
  <%= link_to t('.add_product'), new_admin_product_path, :class => :btn %>
  <!--<%= form_tag admin_products_path, :method => :get, :class => 'form-inline pull-right' do |f| %>-->
    <!--<%= label_tag t('.categories_title') %>-->
    <!--<%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),  { :include_blank => true, :onchange => 'this.form.submit()' } %>-->
  <!--<% end %>-->
</div>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th></th>
    <th><%= t '.name' %></th>
    <th><%= t '.price'  %></th>
    <th>Додано</th>
  </tr>
  </thead>
  <tbody>
  <% for item in @items %>
    <tr>
      <td><%= link_to image_tag(item.cover_image_url), edit_admin_product_path(item )%></td>
      <td><%= link_to item.name, edit_admin_product_path(item) %></td>
      <td><%= number_to_currency(item.price) %></td>
      <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
      <td style="text-align: right;">
        <%= link_to product_path(item), :class => "btn btn-small btn-info", :title => t('.preview') do %>
          <i class="icon-eye-open icon-white"></i>
        <% end %>
        <%= link_to edit_admin_product_path(item), :class => "btn btn-small btn", :title => t('item.form.edit') do %>
          <i class="icon-pencil"></i>
        <% end %>
        <%= link_to admin_product_path(item), :title => t('.delete'), :confirm => t("messages.confirmation"), :method => :delete, :class => "btn btn-small btn" do %>
          <i class="icon-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


