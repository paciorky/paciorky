<% title 'Замовлення' %>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th></th>
    <th>Товар</th>
    <th>Клієнт</th>
    <th>Додано</th>
  </tr>
  </thead>
  <tbody>
  <% for order in @orders %>
    <tr id="<%= dom_id(order) %>">
      <td><%= image_tag(order.product.assets.first.asset.url(:thumb)) %></td>
      <td><%= order.product.name %></td>
      <td><%= order.client_name %></td>
      <td><%= order.human_state_name %></td>
      <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
      <td style="text-align: right;">
        <%= link_to edit_admin_order_path(order), :class => "btn btn-small btn-primary" do %>
          <i class="icon-pencil icon-white"></i> <%= t(:edit) %>
        <% end %>

        <%= link_to deliver_admin_order_path(order), :remote => true, :class => "btn btn-small btn-success" do %>
          <i class="icon-plane icon-white"></i> <%= t("activerecord.state_machines.states.delivered") %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


