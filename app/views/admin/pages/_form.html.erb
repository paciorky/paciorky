<%= tinymce_assets %>

<%= simple_form_for [:admin, @page], :html => { :class => 'form-horizontal' } do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>
  <legend><%= yield(:title) %></legend>

  <%= f.input :title, :input_html => { :class => 'span8' } %>
  <%= f.input :slug, :input_html => { :class => 'span8' } %>
  <%= f.input :content, :input_html => { :class => 'span8 tinymce' } %>
  <%= tinymce :theme => "advanced", :language => "uk" %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>