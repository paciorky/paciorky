<%= simple_form_for [:admin, @item],  :html => { :class => 'form-horizontal' }  do |f| %>
  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>
  <%= f.input :name, :input_html => { :class => "span5" } %>
  <%= f.input :description, :input_html => { :class => "span5" } %>
  <%= f.input :price, :input_html => { :class => "span5" }, :wrapper => :append do
      content_tag :span, "UAH", :class => "add-on"
      f.input_field :price
    end %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>
