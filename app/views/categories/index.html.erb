<% title "Крамничка" %>

<ul class="breadcrumb">
  <%= content_tag :li do %>
    <%= link_to("Головна", root_path) %>
    <span class="divider">/</span>
  <% end %>
  <%= content_tag :li, "Крамничка", :class => :active %>
</ul>
<h1>Крамничка</h1>

<% @categories.each do |category| %>
  <div class="thumb pull-left">
    <%= link_to image_tag(category.items.first.assets.first.asset.url(:medium)), category %>
    <div class="title"><%= link_to category.name, category %></div>

  </div>
<% end %>